
@{
    ViewBag.Title = "ViewProducts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Products</h2>

<table id="products" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Product</th>
            <th>Description</th>
            <th>Colour</th>
            <th>Supplier</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Buy</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function() {
            var table = $("#products").DataTable({
                ajax: {
                    url: "/api/product",
                    method: "GET",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "Name"
                    },
                    {
                        data: "Description"
                    },
                    {
                        data: "Colour"
                    },
                    {
                        data: "Supplier.Name"
                    },
                    {
                        data: "Price"
                    },
                    {
                        data: "Stock"
                    },
                    {
                        data: "Id",
                        render: function(data) {
                            console.log(data);
                            return "<a href='/product/viewproduct/"+ data + "' class='btn btn-primary'>Buy</a>";
                        }
                    }
                ]
            });
        });
    </script>
}
