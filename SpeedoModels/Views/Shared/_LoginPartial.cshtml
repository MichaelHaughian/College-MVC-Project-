@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li>
                @Html.ActionLink("Your Account", "Index", "Manage")
            </li>
            <li>@Html.ActionLink("View Orders", "ViewOrders", "Order", new { id = HttpContext.Current.User.Identity.GetUserId() }, null)</li>
            <li>@Html.ActionLink("Basket(0)", "ViewBasket", "Basket")</li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Your Account", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        <li>@Html.ActionLink("View Orders", "ViewOrders", "Order", new { id = 0 }, null)</li>
        <li>@Html.ActionLink("Basket(0)", "ViewBasket", "Basket")</li>
    </ul>
}
