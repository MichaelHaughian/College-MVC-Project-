
@{
    ViewBag.Title = "SubmitOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ORDER SUBMITTED</h1>

@section scripts
{
    <script>
        $(document).ready(function() {
            $.ajax({
                url: "/basket/getbasket/",
                method: "GET",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (basketJson) {
                        $.ajax({
                            url: "/api/order/",
                            method: "POST",
                            contentType: "application/json; charset=utf-8",
                            dataType: "json",
                            data: basketJson,
                            success: function () {
                                
                            }
                        });
                }
            });
        });
    </script>
}

