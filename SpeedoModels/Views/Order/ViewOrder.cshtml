
@{
    ViewBag.Title = "ViewOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ViewOrder</h2>

<table id="orderLines" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>


@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#orders").DataTable({
                ajax: {
                    url: "/api/order/" + @Html.Raw(ViewBag.userId),
                    method: "GET",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "Id"
                    },
                    {
                        data: "TrackingNumber"
                    },
                    {
                        data: "OrderTotal"
                    },
                    {
                        data: "Id",
                        render: function(data) {
                            console.log(data);
                            return "<a href='/order/vieworder/" + data + "' class='btn-primary'>View</a>";
                        }
                    }
                ]
            });
        });



    </script>
}




