
@{
    ViewBag.Title = "ViewAccounts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View Accounts</h2>

<table id="users" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email Address</th>
            <th>First Name</th>
            <th>Second Name</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
                var table = $("#users").DataTable({
                    ajax: {
                        url: "/api/account",
                        method: "GET",
                    dataSrc: ""
                    },
                columns: [
                    {
                        data: "UserName"
                    },
                    {
                        data: "Email"
                    },
                    {
                        data: "FirstName"
                    },
                    {
                        data: "LastName"
                    },
                    {
                        data: "Id",
                        render: function (data) {
                            return "<button class='btn btn-primary js-delete' data-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            $("#users").on("click",
                ".js-delete",
                function() {
                    var button = $(this);
                    bootbox.confirm("Are you sure you want to delete this user?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: "/api/account/" + button.attr("data-id"),
                                    method: "DELETE",
                                    success: function () {
                                        table.row(button.parents("tr")).remove().draw();
                                    }
                                });
                            }
                        });
                });
        });
    </script>
}
